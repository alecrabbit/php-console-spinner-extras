<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/10.1/phpunit.xsd"
         bootstrap="tests/bootstrap.php"
         executionOrder="random"
         beStrictAboutOutputDuringTests="true"
         failOnRisky="true"
         failOnWarning="true"
         colors="true"
         cacheDirectory=".tools/.phpunit.cache"
         beStrictAboutCoverageMetadata="false"
         stopOnError="false"
         stopOnFailure="false"
>
    <testsuites>
        <testsuite name="Spinner/Functional">
            <directory>tests/Spinner/Functional</directory>
        </testsuite>
        <testsuite name="Spinner/Extras/Functional">
            <directory>tests/Spinner/Extras/Functional</directory>
        </testsuite>
        <testsuite name="Spinner/Extras/Unit">
            <directory>tests/Spinner/Extras/Unit</directory>
        </testsuite>
    </testsuites>
    <source>
        <include>
            <directory suffix=".php">src</directory>
        </include>
    </source>
</phpunit>
