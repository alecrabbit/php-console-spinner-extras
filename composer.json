{
    "name": "alecrabbit/php-console-spinner-extras",
    "description": "Add-ons for php-console-spinner",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "php",
        "spinner",
        "extras"
    ],
    "require": {
        "php": ">=8.2",
        "alecrabbit/php-color": "1.x-dev",
        "alecrabbit/php-console-spinner": "1.x-dev",
        "alecrabbit/php-wcwidth": "^1.0.0"
    },
    "require-dev": {
        "fakerphp/faker": "*",
        "nunomaduro/collision": "*",
        "phpunit/php-code-coverage": "*",
        "phpunit/phpunit": "^10.0",
        "react/event-loop": "*",
        "revolt/event-loop": "*",
        "symfony/console": "*",
        "symfony/var-dumper": "*",
        "symfony/dependency-injection": "^7.0",
        "php-di/php-di": "^7.0"
    },
    "suggest": {
        "ext-mbstring": "For multibyte Unicode string functionality."
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "AlecRabbit\\Spinner\\": "src\\Spinner\\"
        },
        "files": [
            "src/Spinner/Extras/bootstrap.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "AlecRabbit\\Tests\\": "tests"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
